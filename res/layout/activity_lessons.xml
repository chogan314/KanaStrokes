<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lessonsLayout" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        
	    <FrameLayout
	        android:id="@+id/lessonsKanaStrokesFrame"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/lessonsKanaReadingsText"
	        android:layout_toStartOf="@+id/lessonsKanaReadingsText" >	    
		</FrameLayout>
		
	    <TextView
	        android:id="@+id/lessonsKanaReadingsText"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentEnd="true"
	        android:layout_above="@+id/lessonsNextButton"
	        android:gravity="center" />

	    <Button
	        android:id="@+id/lessonsNextButton"
	        android:layout_width="100dp"
	        android:layout_height="60dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentEnd="true" />
        
    </RelativeLayout>
   
	<FrameLayout 
	    android:id="@+id/lessonsKanaDrawingFrame" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="6" >
	</FrameLayout>

	
</LinearLayout>
